// Spectral flux

A = 1.0;
K = 1000;

sum(X) =
  reduce(a, b in X) a + b;

mapped(X) = log(K*X + A);

mapped_no_log(X) = K*X + A;

reduced(pair) = sum( max(0.0, pair[2] - pair[1]) );

flux(X) = {
  for each(pair takes 2 in mapped(X))
    reduced(pair)
};

flux_no_log(X) = {
  for each(pair takes 2 in mapped_no_log(X))
    reduced(pair)
};
