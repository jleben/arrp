##sum(x) = [#x+1: 0 -> 0; i -> this[i-1] + x[i-1]];

convolve(h,x) =
  [#x: i -> math.sum([#h: k -> h[k] * x[i+#h-1-k]])];

eq(hs,x) =
  let chs = [#hs: i -> convolve(hs[i],x)] in
    math.sum(chs);

src = [0 -> 0; i -> this[i-1] + 1];

hs = [10: i -> [64: n -> 0.5/(n+1)]];

main = eq(hs,src);
